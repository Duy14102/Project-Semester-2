@model User
@using Microsoft.AspNetCore.Http;
@{
    var context = Context.Session;
}

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/Admin/EditUser.cshtml.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
</head>

<body class="bg-light">
    <div class="container-xl px-4 mt-4">
        <!-- Account page navigation-->
        <div class="row">
            <div class="col-xl-4">
                <!-- Profile picture card-->
                <div class="card mb-4 mb-xl-0">
                    @Html.HiddenFor(m => m.UserId)
                    <div class="card-header">Id tài khoản : <b>@Html.DisplayFor(Model => Model.UserId)</b></div>
                    <div class="card-body text-center">
                        <!-- Profile picture image-->
                        <img class="img-account-profile rounded-circle mb-2" src="~/image/DefaultFeedback.jpg" alt=""
                            width="30%">
                        <!-- Profile picture help block-->
                        <div class="small font-italic text-muted mb-4">@Html.DisplayFor(Model => Model.UserName)
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header">
                        Chi tiết tài khoản
                    </div>
                    <div class="card-body">
                        <form>
                            <!-- Form Group (username)-->
                            <div class="mb-3">
                                Tài khoản : @Html.DisplayFor(m => m.UserName, new { @class = "form-control"})
                            </div>
                            <!-- Form Row        -->
                            <div class="mb-3">
                                Tên : @Html.DisplayFor(m => m.Fullname, new { @class = "form-control"})
                            </div>
                            <!-- Form Group (email address)-->
                            <div class="mb-3">
                                Email : @Html.DisplayFor(m => m.Email, new { @class = "form-control"})
                            </div>
                            <!-- Form Row-->
                            <div class="mb-3">
                                Thời gian gia nhập : @Html.DisplayFor(m => m.UserDate, new { @class = "form-control"})
                            </div>
                            <!-- Save changes button-->
                            <a class="btn btn-primary"
                                href="@Url.Action("EditUserPanel", "Admin", new { id = context.GetInt32("UserId") })">Sửa</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>