@model Item
@{
    var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/Admin/DeleteItem.cshtml.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
</head>

<body class="bg-light">
    @if (TempData["Existitem"] != null)
        {
            <div id="cartpopup2" classs="container">
                <div class="row no-gutters">
                    <div class="col-lg-2 col-md-12 ml-auto">
                        <div class="alert alert-danger shadow p-2" role="alert" style="border-radius: 3px">
                            <div class="text-center">
                                <svg width="3em" height="3em" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                                class="m-1 bi bi-shield-fill-x" viewBox="0 0 16 16">
                                    <path
                                    d="M8 0c-.69 0-1.843.265-2.928.56-1.11.3-2.229.655-2.887.87a1.54 1.54 0 0 0-1.044 1.262c-.596 4.477.787 7.795 2.465 9.99a11.777 11.777 0 0 0 2.517 2.453c.386.273.744.482 1.048.625.28.132.581.24.829.24s.548-.108.829-.24a7.159 7.159 0 0 0 1.048-.625 11.775 11.775 0 0 0 2.517-2.453c1.678-2.195 3.061-5.513 2.465-9.99a1.541 1.541 0 0 0-1.044-1.263 62.467 62.467 0 0 0-2.887-.87C9.843.266 8.69 0 8 0zM6.854 5.146 8 6.293l1.146-1.147a.5.5 0 1 1 .708.708L8.707 7l1.147 1.146a.5.5 0 0 1-.708.708L8 7.707 6.854 8.854a.5.5 0 1 1-.708-.708L7.293 7 6.146 5.854a.5.5 0 1 1 .708-.708z" />
                                </svg>
                            </div>
                            <p style="font-size:15px" class="mb-0 font-weight-light text-center"><b
                                class="mr-1">@TempData["Existitem"]</b></p>
                        </div>
                    </div>
                </div>
            </div>
        }
    <div class="container-xl px-4 mt-4">
        <!-- Account page navigation-->
        <div class="row">
            <div class="col-xl-4">
                <!-- Profile picture card-->
                <div class="card mb-4 mb-xl-0">
                    <div class="card-header">Id mặt hàng : <b>@Html.DisplayFor(Model => Model.ItemId)</b></div>
                    <div class="card-body text-center">
                        <!-- Profile picture image-->
                        <img class="img-account-profile rounded-circle mb-2" src="@Url.Content(@Model.ItemDescription)"
                            alt="" width="30%">
                        <!-- Profile picture help block-->
                        <div class="small font-italic text-muted mb-4">@Html.DisplayFor(Model => Model.ItemName)
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header">
                        Xóa mặt hàng
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("DeleteItem", "Admin", FormMethod.Post))
                        {
                            <form>
                                <!-- Form Group (username)-->
                            <div class="mb-3">
                                    Tên mặt hàng : @Html.DisplayFor(m => m.ItemName, new { @class = "form-control"})
                                </div>
                                <!-- Form Row-->
                            <div class="mb-3">
                                    <!-- Form Group (first name)-->
                                    Giá : @String.Format(format, "{0:c0}", @Model.UnitPrice, new { @class = "form-control"} )
                                </div>
                                <!-- Form Row        -->
                            <div class="mb-3">
                                    Danh mục : @Html.DisplayFor(m => m.Category, new { @class = "form-control"})
                                </div>
                                <!-- Form Group (email address)-->
                            <div class="mb-3">
                                    Mô tả : @Html.DisplayFor(m => m.ItemStory, new { @class = "form-control"})
                                </div>
                                <!-- Form Row-->
                                <!-- Save changes button-->
                            <button type="button" style="text-align: left;" class="btn btn-danger" data-toggle="modal"
                                data-target="#exampleModal3">Xóa</button>
                                <div class="modal fade" id="exampleModal3" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-body" style="text-align: left;">
                                                <button type="button" class="close" data-dismiss="modal">
                                                    <b>X</b>
                                                </button>
                                                <h4>Xóa</h4>
                                                <h6>Bạn chắc chắn muốn xóa mặt hàng @Html.DisplayFor(m => m.ItemName) chứ?
                                                </h6><br>
                                                <div class="Heiy">
                                                    <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Hủy</button>
                                                    <input type="submit" class="btn btn-danger" value="Xóa" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <a class="btn btn-secondary" asp-area="" asp-action="AdminPanel" asp-controller="Admin">Quay
                                    lại</a>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>