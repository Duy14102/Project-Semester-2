@model User

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/Admin/EditUser.cshtml.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
</head>

<body class="bg-light">
    <div class="container-xl px-4 mt-4">
        <!-- Account page navigation-->
        <div class="row">
            <div class="col-xl-4">
                <!-- Profile picture card-->
                <div class="card mb-4 mb-xl-0">
                    <div class="card-header">Id tài khoản : <b>@Html.DisplayFor(Model => Model.UserId)</b></div>
                    <div class="card-body text-center">
                        <!-- Profile picture image-->
                        <img class="img-account-profile rounded-circle mb-2" src="@Url.Content(@Model.Image)" alt=""
                            width="50%">
                        <!-- Profile picture help block-->
                        <div class="small font-italic text-muted mb-4">@Html.DisplayFor(Model => Model.UserName)
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header">
                        Xóa tài khoản
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("DeleteUser", "Admin", FormMethod.Post))
                        {
                            <form>
                                <!-- Form Group (username)-->
                            <div class="mb-3">
                                    Tài khoản : @Html.DisplayFor(m => m.UserName, new { @class = "form-control"})
                                </div>
                                <!-- Form Row-->
                            <div class="mb-3">
                                    <!-- Form Group (first name)-->
                                    Mật khẩu : @Html.DisplayFor(m => m.Password, new { @class = "form-control"})
                                </div>
                                <!-- Form Row        -->
                            <div class="mb-3">
                                    Tên : @Html.DisplayFor(m => m.Fullname, new { @class = "form-control"})
                                </div>
                                <!-- Form Group (email address)-->
                            <div class="mb-3">
                                    Email : @Html.DisplayFor(m => m.Email, new { @class = "form-control"})
                                </div>
                                <!-- Form Row-->
                            <div class="mb-3">
                                    Role : @Html.DisplayFor(m => m.Role, new { @class = "form-control"})
                                </div>
                                <!-- Save changes button-->
                            <button type="button" style="text-align: left;" class="btn btn-danger" data-toggle="modal"
                                data-target="#exampleModal4">Xóa</button>
                                <div class="modal fade" id="exampleModal4" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-body" style="text-align: left;">
                                                <button type="button" class="close" data-dismiss="modal">
                                                    <b>X</b>
                                                </button>
                                                <h4>Xóa</h4>
                                                <h6>Bạn chắc chắn muốn xóa tài khoản @Html.DisplayFor(m => m.UserName) chứ?
                                                </h6><br>
                                                <div class="Heiy">
                                                    <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Hủy</button>
                                                    <input type="submit" class="btn btn-danger" value="Xóa" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <a class="btn btn-secondary" asp-area="" asp-action="AdminPanel" asp-controller="Admin">Quay
                                    lại</a>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>