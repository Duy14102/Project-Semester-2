@{
    ViewData["Title"] = "Trang Chủ";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Home/Index.cshtml.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Font Awesome 5 CSS -->
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.2/css/all.css'>
</head>

<body class="bg-light">
    <div class="text-center">
        <!--   Banner   -->
        <img src="~/image/BannerHere.png" width="100%">

        <!--   Banner Feet   -->
        <h1 align="center" class="BestsellerText">Bán Chạy Nhất</h1>
        <div class="coverThis">
            <a asp-area="" asp-controller="Product" asp-action="TatCa">
                <p class="BackToHome">Xem Tất Cả</p>
            </a>
        </div>

        <!--   Item   -->
        <div class="containerCard">
            <div class="row">
                <div
                    class="col-lg-3 col-sm-6 d-flex flex-column align-items-center justify-content-center product-item my-3">
                    <div class="product"><a href="#"><img
                                src="https://images.pexels.com/photos/54203/pexels-photo-54203.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500"
                                alt=""></a>
                        <ul class="d-flex align-items-center justify-content-center list-unstyled icons">
                            <li class="icon"><span class="fas fa-expand-arrows-alt"></span></li>
                            <li class="icon mx-3"><span class="far fa-heart"></span></li>
                            <li class="icon"><span class="fas fa-shopping-bag"></span></li>
                        </ul>
                    </div>
                    <a style="text-decoration: none;" class="title pt-4 pb-1 text-dark" href="#">Winter Sweater</a>
                    <div class="d-flex align-content-center justify-content-center"> <span class="fas fa-star"></span>
                        <span class="fas fa-star"></span> <span class="fas fa-star"></span> <span
                            class="fas fa-star"></span>
                        <span class="fas fa-star"></span>
                    </div>
                    <div class="price">$ 60.0</div>
                </div>
            </div>
        </div>

        <!-- Second Banner With Gif -->
        <div class="coverBanner">
            <img src="~/image/gifBanner.gif" width="100%" height="300px" style="filter: brightness(0.6);">
            <div class="textCentered1">
                <h2><b>Cơm Nhé ?</b></h2>
                <h6>Cập nhật thông tin món ăn mới</h6>
                <h6 class="textCentered2">Facebook</h6>
                <h6 class="textCentered3">Twitter</h6>
            </div>
        </div>

        <!--   FeedBack    -->
        <section id="testimonial-slider" class="py-5 FeedBack">
            <h1 align="center" class="BestsellerText">FeedBack Từ Khách</h1>
            <div class="container">
                <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active"
                            aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1"
                            aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2"
                            aria-label="Slide 3"></button>
                    </div>
                    <div class="col-sm-8 mx-auto">
                        <div class="carousel-inner text-center text-dark py-5">
                            <div class="carousel-item active" data-bs-interval="10000">
                                <div class="user-photo shadow">
                                    <img src="~/image/FeedBack1.jpg" class="img-fluid" alt="testimonial slider">
                                </div>
                                <div class="slider-caption mt-3">
                                    <p class="font-size:5vw;">Lorem Ipsum is simply dummy text of the printing and
                                        typesetting
                                        industry. Lorem Ipsum has been the industry's standard dummy text ever since the
                                        1500s, when an unknown printer took a galley of type and scrambled it to make a
                                        type specimen book.</p>
                                    <figcaption class="blockquote-footer mt-3 text-dark font-size:5vw"><cite>Gurdeep
                                            Dahiya</cite></figcaption>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </section>
    </div>
</body>
