@{
    ViewData["Title"] = "Trang Chủ";
    var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
    var viewItemsData = ViewData["Items"];
    var viewFeedbacksData = ViewData["Feedbacks"];
    var Nuoc = "Nước";
    var Canh = "Canh";
    var DoAnKem = "Đồ Ăn Kèm";
    var Thit = "Thịt";
    var Rau = "Rau";
}


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Home/Index.cshtml.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Font Awesome 5 CSS -->
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.2/css/all.css'>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body class="bg-light">
    @if(TempData["CartPopup2"] != null){
        <div id="cartpopup2" classs="container">
	<div class="row no-gutters">
		<div class="col-lg-2 col-md-12 ml-auto">
			<div class="alert alert-success shadow p-2" role="alert" style="border-radius: 3px">
				<div class="text-center">
					<svg width="3em" height="3em" viewBox="0 0 16 16" class="m-1 bi bi-shield-fill-check" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
						<path fill-rule="evenodd" d="M8 .5c-.662 0-1.77.249-2.813.525a61.11 61.11 0 0 0-2.772.815 1.454 1.454 0 0 0-1.003 1.184c-.573 4.197.756 7.307 2.368 9.365a11.192 11.192 0 0 0 2.417 2.3c.371.256.715.451 1.007.586.27.124.558.225.796.225s.527-.101.796-.225c.292-.135.636-.33 1.007-.586a11.191 11.191 0 0 0 2.418-2.3c1.611-2.058 2.94-5.168 2.367-9.365a1.454 1.454 0 0 0-1.003-1.184 61.09 61.09 0 0 0-2.772-.815C9.77.749 8.663.5 8 .5zm2.854 6.354a.5.5 0 0 0-.708-.708L7.5 8.793 6.354 7.646a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0l3-3z"/>
					</svg>
				</div>
				<p style="font-size:15px" class="mb-0 font-weight-light text-center"><b class="mr-1">@TempData["CartPopup2"]</b></p>
			</div>
		</div>
	</div>
</div>
    }
    <div class="text-center">
        <!--   Banner   -->
        <img src="~/image/BannerHere.png" width="100%">
        <!--   Banner Feet   -->
        <h1 align="center" class="BestsellerText">Bán Chạy Nhất</h1>
        <div class="coverThis">
            <a asp-area="" asp-controller="Product" asp-action="TatCa">
                <p class="BackToHome">Xem Tất Cả</p>
            </a>
        </div>
        <!--   Item   -->
        <div class="paddingItem">
            <div class="containerCard">
                <div class="row">
                    @if (viewItemsData is List<Item>)
                    {
                        List<Item> items = (List<Item>)viewItemsData;
                        @foreach (var item in items)
                        {
                            <div
                        class="col-lg-3 col-sm-6 d-flex flex-column align-items-center justify-content-center product-item my-3">
                                <div class="product">
                                    <a href='@Url.Action("ProductDetail", "Product", new { id=item.ItemId })'>
                                        <img src="@Url.Content(@item.ItemDescription)" />
                                    </a>
                                    <ul class="d-flex align-items-center justify-content-center list-unstyled icons">
                                        <a class="text-dark" href='@Url.Action("ProductDetail", "Product", new { id=item.ItemId })'>
                                            <li class="icon"><span class="fa-solid fa-info"></span></li>
                                        </a>
                                        <li class="icon mx-3"><span class="far fa-heart"></span></li>
                                        <a type="button" id="clicktoadd" class="text-dark" asp-route="addcart" 
                                        asp-route-ItemId="@item.ItemId">
                                            <li class="icon"><span class="fas fa-shopping-bag"></span></li>
                                        </a>
                                    </ul>
                                </div>
                                @if (item.Category == DoAnKem)
                                {
                                    <a asp-area="" asp-controller="Product" asp-action="DoAnKem" class="text-muted pt-2"
                            style="text-decoration: none;">@Html.DisplayFor(modelItem =>
                            item.Category)</a>
                                }
                                @if (item.Category == Thit)
                                {
                                    <a asp-area="" asp-controller="Product" asp-action="Thit" class="text-muted pt-2"
                            style="text-decoration: none;">@Html.DisplayFor(modelItem =>
                            item.Category)</a>
                                }
                                @if (item.Category == Rau)
                                {
                                    <a asp-area="" asp-controller="Product" asp-action="Rau" class="text-muted pt-2"
                            style="text-decoration: none;">@Html.DisplayFor(modelItem =>
                            item.Category)</a>
                                }
                                @if (item.Category == Canh)
                                {
                                    <a asp-area="" asp-controller="Product" asp-action="Canh" class="text-muted pt-2"
                            style="text-decoration: none;">@Html.DisplayFor(modelItem =>
                            item.Category)</a>
                                }
                                @if (item.Category == Nuoc)
                                {
                                    <a asp-area="" asp-controller="Product" asp-action="Nuoc" class="text-muted pt-2"
                            style="text-decoration: none;">@Html.DisplayFor(modelItem =>
                            item.Category)</a>
                                }
                                <a style="text-decoration: none;" class="title pt-1 pb-1 text-dark"
                            href='@Url.Action("ProductDetail", "Product", new { id=item.ItemId })'>@Html.DisplayFor(modelItem => item.ItemName)</a>
                                <div class="pt-1 d-flex align-content-center justify-content-center"> <span
                                class="fas fa-star"></span>
                                    <span class="fas fa-star"></span> <span class="fas fa-star"></span> <span
                                class="fas fa-star"></span>
                                    <span class="fas fa-star"></span>
                                </div>
                                <div class="price">@String.Format(format, "{0:0,0 vnđ}", @item.UnitPrice )</div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Second Banner With Gif -->
        <div class="coverBanner">
            <img src="~/image/gifBanner.gif" width="100%" height="300px" style="filter: brightness(0.6);">
            <div class="textCentered1">
                <h2><b>Cơm Nhé ?</b></h2>
                <h6>Cập nhật thông tin món ăn mới</h6>
                <a href="#" class="textCentered2">Facebook</a>
                <a href="#" class="textCentered3">Twitter</a>
            </div>
        </div><br><br>
        <h1 align="center" class="BestsellerText">FeedBack từ khách</h1>
        <!--   FeedBack    -->
                <div class="container mt-5 mb-5">
                    <div class="row g-2">
                              @if (viewFeedbacksData is List<Feedback>)
        {
            List<Feedback> feedbacks = (List<Feedback>)viewFeedbacksData;
            @foreach (var feedback in feedbacks)
            {
                        <div class="col-md-4">
                            <div id="tv" class="card p-3 text-center px-4">
                                <div class="user-image">
                                    <img id="myImage" data-src="@Url.Content(@feedback.FeedbackLink)" class="rounded-circle lazy" width="80">
                                </div>
                                <div class="user-content">
                                    <h5 class="mb-0">@Html.DisplayFor(modelFeedback => feedback.FeedbackName)</h5>
                                    <span>Khách hàng</span>
                                    <p>@Html.DisplayFor(modelFeedback => feedback.FeedbackStory)</p>
                                </div>
                                <div class="ratings">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                            </div>
                        </div>
                           }
        }
                    </div>
                </div>
    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
