@{
    ViewData["Title"] = "Trang Chủ";
    var viewItemsData = ViewData["Items"];
    var viewFeedbacksData = ViewData["Feedbacks"];
    var Nuoc = "Nước";
    var Canh = "Canh";
    var DoAnKem = "Đồ Ăn Kèm";
    var Thit = "Thịt";
    var Rau = "Rau";
}


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Home/Index.cshtml.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Font Awesome 5 CSS -->
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.2/css/all.css'>
</head>

<body class="bg-light">
    <div class="text-center">
        <!--   Banner   -->
        <img src="~/image/BannerHere.png" width="100%">

        <!--   Banner Feet   -->
        <h1 align="center" class="BestsellerText">Bán Chạy Nhất</h1>
        <div class="coverThis">
            <a asp-area="" asp-controller="Product" asp-action="TatCa">
                <p class="BackToHome">Xem Tất Cả</p>
            </a>
        </div>

        <!--   Item   -->
        <div class="paddingItem">
            <div class="containerCard">
                <div class="row">
                    @if (viewItemsData is List<Item>)
                    {
                        List<Item> items = (List<Item>)viewItemsData;
                        @foreach (var item in items)
                        {
                            <div
                        class="col-lg-3 col-sm-6 d-flex flex-column align-items-center justify-content-center product-item my-3">
                                <div class="product">
                                    <a href='@Url.Action("ProductDetail", "Product", new { id=item.ItemId })'>
                                        <img src="@Url.Content(@item.ItemDescription)" />
                                    </a>
                                    <ul class="d-flex align-items-center justify-content-center list-unstyled icons">
                                        <li class="icon"><span class="fas fa-expand-arrows-alt"></span></li>
                                        <li class="icon mx-3"><span class="far fa-heart"></span></li>
                                        <li class="icon"><span class="fas fa-shopping-bag"></span></li>
                                    </ul>
                                </div>
                                @if (item.Category == DoAnKem)
                                {
                                    <a asp-area="" asp-controller="Product" asp-action="DoAnKem" class="text-muted pt-2"
                            style="text-decoration: none;">@Html.DisplayFor(modelItem =>
                            item.Category)</a>
                                }
                                @if (item.Category == Thit)
                                {
                                    <a asp-area="" asp-controller="Product" asp-action="Thit" class="text-muted pt-2"
                            style="text-decoration: none;">@Html.DisplayFor(modelItem =>
                            item.Category)</a>
                                }
                                @if (item.Category == Rau)
                                {
                                    <a asp-area="" asp-controller="Product" asp-action="Rau" class="text-muted pt-2"
                            style="text-decoration: none;">@Html.DisplayFor(modelItem =>
                            item.Category)</a>
                                }
                                @if (item.Category == Canh)
                                {
                                    <a asp-area="" asp-controller="Product" asp-action="Canh" class="text-muted pt-2"
                            style="text-decoration: none;">@Html.DisplayFor(modelItem =>
                            item.Category)</a>
                                }
                                @if (item.Category == Nuoc)
                                {
                                    <a asp-area="" asp-controller="Product" asp-action="Nuoc" class="text-muted pt-2"
                            style="text-decoration: none;">@Html.DisplayFor(modelItem =>
                            item.Category)</a>
                                }
                                <a style="text-decoration: none;" class="title pt-1 pb-1 text-dark"
                            href="#">@Html.DisplayFor(modelItem => item.ItemName)</a>
                                <div class="pt-1 d-flex align-content-center justify-content-center"> <span
                                class="fas fa-star"></span>
                                    <span class="fas fa-star"></span> <span class="fas fa-star"></span> <span
                                class="fas fa-star"></span>
                                    <span class="fas fa-star"></span>
                                </div>
                                <div class="price">@Html.DisplayFor(modelItem => item.UnitPrice)0 ₫</div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Second Banner With Gif -->
        <div class="coverBanner">
            <img src="~/image/gifBanner.gif" width="100%" height="300px" style="filter: brightness(0.6);">
            <div class="textCentered1">
                <h2><b>Cơm Nhé ?</b></h2>
                <h6>Cập nhật thông tin món ăn mới</h6>
                <a href="#" class="textCentered2">Facebook</a>
                <a href="#" class="textCentered3">Twitter</a>
            </div>
        </div>

        <!--   FeedBack    -->
                <div class="container mt-5 mb-5">
                    <div class="row g-2">
                              @if (viewFeedbacksData is List<Feedback>)
        {
            List<Feedback> feedbacks = (List<Feedback>)viewFeedbacksData;
            @foreach (var feedback in feedbacks)
            {
                        <div class="col-md-4">
                            <div class="card p-3 text-center px-4">
                                <div class="user-image">
                                    <img src="@Url.Content(@feedback.FeedbackLink)" class="rounded-circle" width="80">
                                </div>
                                <div class="user-content">
                                    <h5 class="mb-0">@Html.DisplayFor(modelFeedback => feedback.FeedbackName)</h5>
                                    <span>Software Architect</span>
                                    <p>@Html.DisplayFor(modelFeedback => feedback.FeedbackStory)</p>
                                </div>
                                <div class="ratings">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                            </div>
                        </div>
                           }
        }
                    </div>
                </div>
    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
