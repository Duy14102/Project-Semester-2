@model List<CartItem>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Shared/CheckoutDetail.cshtml.css" asp-append-version="true" />
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
</head>

<body class="bg-light">
    @if (Model.Count > 0)
    {
        <div class="row justify-content-center">
            <div class="col-md-8 hh-grayBox">
                <div class="row justify-content-between">
                    <div class="order-tracking completed">
                        <span class="is-complete"></span>
                        <p>Đặt hàng</p>
                    </div>
                    <div class="order-tracking completed">
                        <span class="is-complete"></span>
                        <p>Giao hàng</p>
                    </div>
                    <div class="order-tracking">
                        <span class="is-complete"></span>
                        <p>Thành công</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 mb-4">
                <div class="card mb-4">
                    <div style="background-color: rgb(0, 119, 132);" class="card-header py-3">
                        <h5 class="mb-0 text-white">Thông tin liên lạc</h5>
                    </div>
                    <div class="card-body">
                        <form>
                            <!-- 2 column grid layout with text inputs for the first and last names -->
                        <div class="form-outline mb-4">
                                <label class="form-label" for="form7Example1">Họ và tên</label>
                                <input type="text" id="form7Example1" class="form-control" required />
                            </div>

                            <!-- Text input -->
                        <div class="form-outline mb-4">
                                <label class="form-label" for="form7Example4">Địa chỉ</label>
                                <input type="text" id="form7Example4" class="form-control" required />
                            </div>

                            <!-- Email input -->
                        <div class="form-outline mb-4">
                                <label class="form-label" for="form7Example5">Email</label>
                                <input type="email" id="form7Example5" class="form-control" required />
                            </div>

                            <!-- Number input -->
                        <div class="form-outline mb-4">
                                <label class="form-label" for="form7Example6">Số điện thoại</label>
                                <input min="1" max="1000000000" type="number" id="form7Example6" class="form-control"
                                required />
                            </div>

                            <!-- Message input -->
                        <div class="form-outline mb-4">
                                <label class="form-label" for="form7Example7">Ghi chú</label>
                                <textarea class="form-control" id="form7Example7" rows="4"></textarea>
                            </div>
                        </form>
                        <a style="text-decoration: none;color:rgb(0, 119, 132);" asp-action="Cart">⬅
                            Quay lại</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card mb-4">
                    <div style="background-color: rgb(0, 119, 132);" class="card-header py-3">
                        <h5 class="mb-0 text-white">Tổng kết</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var cartitem in Model)
                        {
                            decimal? total = 0;
                            var thanhtien = cartitem.Quantity * cartitem.item.UnitPrice;
                            total += thanhtien;
                            <ul class="list-group list-group-flush">
                                <li
                            class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                    Thành tiền : <span>@thanhtien<span>0 đ</span></span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    Shipping
                                    <span>Miễn phí</span>
                                </li>
                                <li
                            class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                    <div>
                                        <strong>Tổng cộng</strong>
                                        <strong>
                                            <p class="mb-0">(Đã bao gồm VAT)</p>
                                        </strong>
                                    </div>
                                    <span><strong>@thanhtien<span>0 đ</span></strong></span>
                                </li>
                            </ul>

                            <a type="button" asp-action="Checkout"
                        class="btn btn-lg btn-block btn-success">Order</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</body>